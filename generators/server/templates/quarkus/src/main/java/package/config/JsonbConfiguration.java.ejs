package <%=packageName%>.config;

import io.quarkus.jsonb.JsonbConfigCustomizer;
import javax.inject.Inject;
import javax.inject.Singleton;
import javax.json.bind.JsonbConfig;
import java.util.Locale;

/**
 * Jsonb Configuration
 * Further details https://quarkus.io/guides/rest-json#configuring-json-support
 */
@Singleton
public class JsonbConfiguration implements JsonbConfigCustomizer {

    @Inject
    ZonedDateTimeDeserializer zonedDateTimeDeserializer;

    @Inject
    ZonedDateTimeSerializer zonedDateTimeSerializer;

    @Override
    public void customize(JsonbConfig config) {
        config
        .withDateFormat(Constants.DATE_TIME_FORMAT, Locale.getDefault())
        .withSerializers(zonedDateTimeSerializer)
        .withDeserializers(zonedDateTimeDeserializer);
    }

}
