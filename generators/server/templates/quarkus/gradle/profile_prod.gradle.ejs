dependencies {
    <%_ if (databaseType === 'sql') { _%>
    testImplementation "com.h2database:h2"
    <%_ } _%>
}

def profiles = "prod"
if (project.hasProperty("no-liquibase")) {
    profiles += ",no-liquibase"
}

if (project.hasProperty("swagger")) {
    profiles += ",swagger"
}

<%_ if (!skipClient) { _%>
task webapp_test(type: <%= _.upperFirst(clientPackageManager) %>Task, dependsOn: "<%= clientPackageManager %><%_ if (clientPackageManager === 'npm') { _%>Install<%_ } _%>") {
    args = ["run", "webapp:test"]
}

task webapp(type: <%= _.upperFirst(clientPackageManager) %>Task, dependsOn: "<%= clientPackageManager %><%_ if (clientPackageManager === 'npm') { _%>Install<%_ } _%>") {
    args = ["run", "webapp:prod"]
    environment = [APP_VERSION: project.version]
}
<%_ } _%>

processResources {
    inputs.property('version', version)
}

<%_ if (!skipClient) { _%>

processResources.dependsOn webapp
<%_ } _%>
