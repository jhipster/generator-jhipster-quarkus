package <%= packageName %>.service;

import <%= packageName %>.domain.<%= entityClassName %>;
import io.quarkus.hibernate.orm.panache.PanacheQuery;

import java.util.Optional;
<%_ if (databaseType === 'cassandra') { _%>
import java.util.UUID;
<%_ } _%>

/**
 * Service Interface for managing {@link <%= packageName %>.domain.<%= entityClassName %>}.
 */
public interface <%= entityClassName %>Service {

    /**
     * Save a <%= entityInstance %>.
     *
     * @param <%= instanceName %> the entity to save.
     * @return the persisted entity.
     */
    <%= entityClassName %> persistOrUpdate(<%= entityClass %> <%= instanceName %>);

    /**
     * Delete the "id" <%= entityInstanceName %>.
     *
     * @param id the id of the entity.
     */
    void delete(<%= primaryKeyType %> id);

    /**
     * Get all the <%= entityInstancePlural %>.
     * @return the list of entities.
     */
    PanacheQuery<<%= entityClassName %>> findAll();

    /**
     * Get the "id" <%= entityInstanceName %>.
     *
     * @param id the id of the entity.
     * @return the entity.
     */
    Optional<<%= entityClass %>> findOne(<%= primaryKeyType %> id);

    <%_ for (idx in relationships) { _%>
        <%_ if (relationships[idx].relationshipType === 'one-to-one' && relationships[idx].ownerSide !== true) { _%>
    /**
     * Get all the <%= instanceType %> where <%= relationships[idx].relationshipNameCapitalized %> is {@code null}.
     *
     * @return the list of entities.
     */
    PanacheQuery<<%= entityClass %>> findAllWhere<%= relationships[idx].relationshipNameCapitalized %>IsNull();
        <%_ } _%>
    <%_ } _%>

    <%_ if (fieldsContainOwnerManyToMany === true) { _%>
    /**
     * Get all the <%= entityInstancePlural %> with eager load of many-to-many relationships.
     *
     * @return the list of entities.
    */
    PanacheQuery<<%= entityClass %>> findAllWithEagerRelationships();

    <%_ } _%>

}
