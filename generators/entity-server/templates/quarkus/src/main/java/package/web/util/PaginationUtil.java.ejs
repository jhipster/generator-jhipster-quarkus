package <%= packageName %>.web.util;

import <%= packageName %>.service.Paginated;

import javax.ws.rs.core.Link;
import javax.ws.rs.core.Response;
import javax.ws.rs.core.UriInfo;

public final class PaginationUtil {

    public static final String HEADER_X_TOTAL_COUNT = "X-Total-Count";
    public static final String HEADER_X_PAGE_COUNT = "X-Page-Count";
    public static final String REL_FIRST = "first";
    public static final String REL_LAST = "last";
    public static final String REL_PREV = "prev";
    public static final String REL_NEXT = "next";

    private PaginationUtil() {
    }

    public static <T> Response.ResponseBuilder withPaginationInfo(Response.ResponseBuilder builder, UriInfo uriInfo, Paginated<T> paginated) {
        builder.header(HEADER_X_TOTAL_COUNT, paginated.totalCount);
        builder.header(HEADER_X_PAGE_COUNT, paginated.pageCount);

        var pageNumber = paginated.index;
        var pageSize = paginated.size;

        builder.links(prepareLink(uriInfo, 0, pageSize, REL_FIRST));
        builder.links(prepareLink(uriInfo, paginated.pageCount - 1, pageSize, REL_LAST));

        if (pageNumber > 0) {
            builder.links(prepareLink(uriInfo, pageNumber - 1, pageSize, REL_PREV));
        }

        if (pageNumber < paginated.pageCount - 1) {
            builder.links(prepareLink(uriInfo, pageNumber + 1, pageSize, REL_NEXT));
        }

        return builder;
    }

    private static Link prepareLink(UriInfo uriInfo, long pageNumber, long pageSize, String relType) {
        return Link.fromUriBuilder(
            uriInfo.getRequestUriBuilder()
                .replaceQueryParam("page", pageNumber)
                .replaceQueryParam("size", pageSize)
        ).rel(relType).build();
    }
}
