{
    "name": "generator-jhipster-quarkus",
    "version": "0.1.6",
    "description": "JHipster Quarkus blueprint",
    "keywords": [
        "yeoman-generator",
        "jhipster-blueprint",
        "jhipster-6"
    ],
    "homepage": "https://github.com/jhipster/jhipster-quarkus",
    "author": {
        "name": "Daniel Petisme",
        "email": "daniel@jhipster.tech",
        "url": ""
    },
    "contributors": [
        "Angelo Manganiello <angelo.mang@libero.it> (https://github.com/amanganiello90)"
    ],
    "files": [
        "generators"
    ],
    "main": "generators/app/index.js",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/jhipster/jhipster-quarkus.git"
    },
    "dependencies": {
        "chalk": "2.4.2",
        "faker": "^4.1.0",
        "generator-jhipster": "6.10.1",
        "glob": "7.1.4",
        "lodash": "4.17.19",
        "mkdirp": "0.5.1"
    },
    "devDependencies": {
        "ejs-lint": "0.3.0",
        "eslint": "6.0.0-alpha.2",
        "eslint-config-airbnb-base": "13.1.0",
        "eslint-config-prettier": "4.3.0",
        "eslint-plugin-import": "2.17.3",
        "eslint-plugin-prettier": "3.1.0",
        "husky": "^4.2.3",
        "pre-commit": "1.2.2",
        "prettier": "1.17.1",
        "prettier-plugin-java": "0.7.1",
        "fs-extra": "9.0.0",
        "jsdoc": "3.6.4",
        "mocha": "7.1.2",
        "nyc": "15.0.1",
        "sinon": "9.0.2",
        "yeoman-assert": "3.1.1",
        "yeoman-test": "2.4.1",
        "sonarqube-scanner": "2.6.0"
    },
    "scripts": {
        "prettier:format": "prettier --write \"{,**/}*.{js,json,md,yml,java}\"",
        "lint": "npm run eslint && npm run ejs-lint",
        "lint-fix": "npm run prettier:format && npm run eslint -- --fix",
        "eslint": "eslint . ",
        "ejs-lint": "npm run test:unit -- test/ejslint.js",
        "ejslint": "ejslint",
        "pretest": "npm run lint",
        "sonar:scanner": "sonar-scanner",
        "test": "npm run test:unit -- test/*.spec.js",
        "test:unit": "nyc --reporter=lcov mocha --timeout 300000 --slow 0",
        "jsdoc": "jsdoc --configure jsdoc-conf.json",
        "release": "git push && git push --tags && npm publish",
        "release:patch": "npm version patch -a -m \"Update to %s\" && npm run release",
        "release:minor": "npm version minor -a -m \"Update to %s\" && npm run release",
        "release:major": "npm version major -a -m \"Update to %s\" && npm run release"
    },
    "pre-commit": [
        "lint"
    ],
    "license": "Apache-2.0",
    "bugs": {
        "url": "https://github.com/jhipster/jhipster-quarkus/issues"
    }
}
